<h1>Create a preview:</h1>
<form action="/gallery/<%=@gallery.id%>/ticket" method="post">

    <p>Select an existing client or create a new client below:</p>

<h3>Existing Clients</h3>
 <% if @gallery.clients == []%>
     <p>There is no existing clients at the moment. Please create a new client.
 <% else %>
    <% @gallery.clients.each do |client| %>
    <%if ClientGalleryStatus.find_by(gallery_id: @gallery.id, client_id: client.id).status%>
      <p>
      <label>
      <input type="checkbox" name="previews[]" value="<%= client.id %>"></input>
      <span><%= client.app_id %></span>
      </label>
      </p>
    <% end %>
    <% end %>
 <% end %>
 
    <h3>New Client</h3>
    <label>Client App Number: </label>
    <br>
    <input type="text" name="client[app_id]">
    <br>
<h3>Preview Details:</h3>
<p><label for="ticket[artwork]">Artwork Title:</label>
<input type="text" name="ticket[artwork]" required>
<p><label for="ticket[starting_date]">Starting Date:</label>
<input type="date" name="ticket[starting_date]" placeholder="yyyy-mm-dd" required>
<p><label for="ticket[ending_date]">Ending Date:</label>
<input type="date" name="ticket[ending_date]" placeholder="yyyy-mm-dd" required>
<br> <br>
  <button class="btn waves-effect waves-light" type="submit" name="action">Create
    <i class="material-icons right">send</i>
  </button>
  </form>